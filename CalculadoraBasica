    private void bt_calcularActionPerformed(java.awt.event.ActionEvent evt) {//GEN-FIRST:event_bt_calcularActionPerformed
        double valor1 = Double.parseDouble(txt_valor1.getText());
        double valor2 = Double.parseDouble(txt_valor2.getText());
        int op = bt_operacoes.getSelectedIndex();
        double calculo = 0;
        switch(op){
                case 0:
                    //selecione
                    
                        break;
                case 1:
                     //adição 
                    calculo = valor1 + valor2;
                        break;
                
                case 2:
                        //subtração
                    calculo = valor1 - valor2;
                        break;
                        
                case 3:  
                        //multiplicação
                    if((valor1 != 0) && (valor2 != 0)){
                    calculo = valor1 * valor2;
                    } 
                        break;
               
                case 4:  
                        //divisão
                    if((valor1 != 0) && (valor2 != 0)){
                    calculo = valor1 / valor2;
                    } 
                        break;
                            
                }
                lbl_resultado.setText("Resultado: " + calculo);
        
    }//GEN-LAST:event_bt_calcularActionPerformed

